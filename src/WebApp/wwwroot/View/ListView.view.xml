<mvc:View xmlns:core="sap.ui.core"
          controllerName="controleDeFuncionarios.Controller.ListView"
          xmlns:m="sap.m"
          xmlns:mvc="sap.ui.core.mvc"
          displayBlock="true">

                <m:Page title="{i18n>tituloPaginaPrincipal}">
                    <m:headerContent>                   
                        
                    </m:headerContent>
                    <m:content>
                        <m:Bar>
                            <m:contentRight>
                                <m:Button icon="sap-icon://add" text="Adicionar Novo" press="onAddButtonPress" />
                                <m:ToolbarSpacer/>                                
                                <m:SearchField width="30%" search="barraPesquisa"/>
                            </m:contentRight>
                        </m:Bar>
                        <m:Panel class="sapUiResponsiveMargin" width="auto">
                            <m:content>
                                <m:List id="myList" items="{funcionarios>/}">
                                    <m:CustomListItem  type="Navigation" press="detalhesFuncionarios">
                                        <m:HBox>
                                            <core:Icon size="2rem" src="sap-icon://work-history" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"></core:Icon>
                                            <m:VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
                                                <m:Text class="sapMTextWarning" text="{funcionarios>nome}" />
                                                <m:Label text="{funcionarios>cpf}" />   
                                            </m:VBox>                                                                            
                                        </m:HBox>
                                    </m:CustomListItem>
                                </m:List>
                            </m:content>
                        </m:Panel>
                    </m:content>
                </m:Page>
       
</mvc:View>

